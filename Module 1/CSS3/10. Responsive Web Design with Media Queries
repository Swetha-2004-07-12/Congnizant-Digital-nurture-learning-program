/* ==========================
   Responsive Media Query
   Screens smaller than 768px
   ========================== */
@media screen and (max-width: 767px) {
  
  /* Stack nav links vertically */
  .main-nav {
    flex-direction: column;
    gap: 15px;
  }

  .main-nav a {
    font-size: 1rem;
    padding: 10px;
  }

  /* Reduce image size */
  .responsive-img {
    width: 90vw;
  }

  /* Reduce font sizes */
  body {
    font-size: 14px;
  }

  .content-section h1 {
    font-size: 1.5rem;
  }
}
