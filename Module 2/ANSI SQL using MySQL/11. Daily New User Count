<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Daily New User Count (Last 7 days)</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #e6f7ff; }
    ul { list-style: none; padding: 0; }
    li { background: #fff; margin: 5px 0; padding: 10px; border-left: 5px solid #0288d1; }
  </style>
</head>
<body>

  <h2>Daily New User Registrations (Last 7 days)</h2>
  <ul id="daily-users"></ul>

  <script>
    // Sample users with registration dates (ISO format)
    const users = [
      { id: 1, name: "Alice", registeredOn: "2025-05-21" },
      { id: 2, name: "Bob", registeredOn: "2025-05-25" },
      { id: 3, name: "Charlie", registeredOn: "2025-05-26" },
      { id: 4, name: "David", registeredOn: "2025-05-26" },
      { id: 5, name: "Eva", registeredOn: "2025-05-27" },
      { id: 6, name: "Frank", registeredOn: "2025-05-23" }
    ];

    const today = new Date("2025-05-27"); // Fixed date for demo
    const dailyCount = {};

    // Initialize last 7 days keys with zero count
    for (let i = 6; i >= 0; i--) {
      const d = new Date(today);
      d.setDate(today.getDate() - i);
      const dateStr = d.toISOString().slice(0, 10);
      dailyCount[dateStr] = 0;
    }

    users.forEach(user => {
      if (user.registeredOn in dailyCount) {
        dailyCount[user.registeredOn]++;
      }
    });

    const ul = document.getElementById("daily-users");
    Object.entries(dailyCount).forEach(([date, count]) => {
      const li = document.createElement("li");
      li.textContent = `${new Date(date).toDateString()}: ${count} new user(s)`;
      ul.appendChild(li);
    });
  </script>

</body>
</html>
