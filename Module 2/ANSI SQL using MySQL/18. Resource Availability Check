<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Events Without Resources</title>
<style>body{font-family:Arial,sans-serif;padding:20px;} ul{list-style:none;padding:0;} li{margin:6px 0;}</style>
</head>
<body>

<h2>Events Without Uploaded Resources</h2>
<ul id="no-resources-list"></ul>

<script>
const events = [
  { id: 1, name: "Tech Expo" },
  { id: 2, name: "Startup Summit" },
  { id: 3, name: "Food Carnival" }
];

const resources = [
  { eventId: 1, type: "pdf" },
  { eventId: 1, type: "image" },
  { eventId: 3, type: "link" }
];

// Find events without resources
const eventIdsWithResources = new Set(resources.map(r => r.eventId));
const eventsWithoutResources = events.filter(e => !eventIdsWithResources.has(e.id));

const ul = document.getElementById('no-resources-list');
if(eventsWithoutResources.length === 0){
  ul.innerHTML = '<li>All events have resources uploaded.</li>';
} else {
  eventsWithoutResources.forEach(e => {
    const li = document.createElement('li');
    li.textContent = e.name;
    ul.appendChild(li);
  });
}
</script>

</body>
</html>
