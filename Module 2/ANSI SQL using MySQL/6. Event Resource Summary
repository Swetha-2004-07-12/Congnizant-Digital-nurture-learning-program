<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Event Resource Summary</title>
  <style>
    body { font-family: Arial, sans-serif; background: #fff; padding: 20px; }
    table { width: 100%; border-collapse: collapse; margin-top: 15px; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #1976d2; color: white; }
  </style>
</head>
<body>

  <h2>Event Resource Summary</h2>
  <table>
    <thead>
      <tr>
        <th>Event Name</th>
        <th>PDFs</th>
        <th>Images</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody id="resource-table-body"></tbody>
  </table>

  <script>
    // Sample event resource data
    const eventResources = [
      {
        name: "Tech Conference",
        resources: [
          { type: "pdf", url: "file1.pdf" },
          { type: "image", url: "img1.jpg" },
          { type: "link", url: "https://example.com" },
          { type: "pdf", url: "file2.pdf" },
        ]
      },
      {
        name: "Art Expo",
        resources: [
          { type: "image", url: "art1.png" },
          { type: "image", url: "art2.jpg" },
          { type: "link", url: "https://artexample.com" }
        ]
      },
      {
        name: "Startup Summit",
        resources: [
          { type: "pdf", url: "startup.pdf" },
          { type: "link", url: "https://startup.com" },
          { type: "link", url: "https://pitch.com" }
        ]
      }
    ];

    const tbody = document.getElementById("resource-table-body");

    eventResources.forEach(event => {
      // Count resources by type
      const pdfCount = event.resources.filter(r => r.type === "pdf").length;
      const imageCount = event.resources.filter(r => r.type === "image").length;
      const linkCount = event.resources.filter(r => r.type === "link").length;

      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${event.name}</td>
        <td>${pdfCount}</td>
        <td>${imageCount}</td>
        <td>${linkCount}</td>
      `;
      tbody.appendChild(row);
    });
  </script>

</body>
</html>
