<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inactive Users</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f7f9fb; }
    .user-card { background: #fff; padding: 12px; margin: 8px 0; border-left: 4px solid #f44336; }
  </style>
</head>
<body>

  <h2>Inactive Users (No registration in last 90 days)</h2>
  <div id="inactive-users"></div>

  <script>
    const today = new Date();
    const users = [
      { name: "Alice", lastRegistration: "2025-02-01" },
      { name: "Bob", lastRegistration: "2025-05-20" },
      { name: "Charlie", lastRegistration: "2025-01-15" },
      { name: "David", lastRegistration: "2025-03-01" },
      { name: "Eva", lastRegistration: "2024-12-30" }
    ];

    const ninetyDaysAgo = new Date();
    ninetyDaysAgo.setDate(today.getDate() - 90);

    const inactiveUsers = users.filter(user => new Date(user.lastRegistration) < ninetyDaysAgo);

    const userContainer = document.getElementById("inactive-users");
    if (inactiveUsers.length === 0) {
      userContainer.innerHTML = "<p>All users are active.</p>";
    } else {
      inactiveUsers.forEach(user => {
        const div = document.createElement("div");
        div.className = "user-card";
        div.textContent = `${user.name} - Last registration: ${new Date(user.lastRegistration).toDateString()}`;
        userContainer.appendChild(div);
      });
    }
  </script>

</body>
</html>
